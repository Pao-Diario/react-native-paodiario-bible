{

  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,    
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    
  },
  "include": ["src","**/*.ts","**/*.tsx","**/*.js","**/*.jsx","**/*.json","**/*.d.ts"],
  "exclude": ["node_modules","example"]
}
